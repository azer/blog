  <div class="blog column">
    <a class="profile-pic" href="/">
      <img src="/static/self.jpg" />
      <span>Azer Koçulu</span>
      {{ createdAt  | date("MMM dd, yyyy", "gl") }}
    </a>
    <div class="page-date"></div>
    <h1 class="page-title">{{ title }}</h1>
